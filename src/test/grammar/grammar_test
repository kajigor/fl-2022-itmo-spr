DIGIT: "0".."9"
HEXDIGIT: "a".."f" | "A".."F" | DIGIT

INT: DIGIT+
SIGNED_INT: ("+" | "-")? INT
DECIMAL: INT "." INT? | "." INT

EXP: ("e" | "E") SIGNED_INT
FLOAT: INT EXP | DECIMAL EXP?
SIGNED_FLOAT: ("+" | "-")? FLOAT

NUMBER: FLOAT | INT
SIGNED_NUMBER: ("+" | "-")? NUMBER

LCASE_LETTER: "a".."z"
UCASE_LETTER: "A".."Z"

LETTER: UCASE_LETTER | LCASE_LETTER
WORD: LETTER+


NAME: ("_" | LETTER) ("_" | LETTER | DIGIT)*


WS_INLINE: (" " | "\t")+
WS: "\s"+


STRING : '"' (DIGIT | LETTER | WS)* '"'

CR : "\r"
LF : "\n"
NEWLINE: (CR? LF)+
